<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../app/code/Magento/Webapi/etc/webapi.xsd">
    <route method="GET" url="/V1/crudapi">
        <service class="Tejas\CrudApi\Api\CrudInterface" method="getCustomTableData" />
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/crudapi/:id">
        <service class="Tejas\CrudApi\Api\CrudInterface" method="getDataById" />
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/crudapi/save">
        <service class="Tejas\CrudApi\Api\CrudInterface" method="saveData"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/crudapi/delete/:id">
        <service class="Tejas\CrudApi\Api\CrudInterface" method="deleteDataById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
